<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.gm325.cards.PlayController">
   <children>
      <Button fx:id="returnButton" layoutX="31.0" layoutY="33.0" mnemonicParsing="false" onAction="#returnButtonAction" text="RETURN TO HOME" />
      <GridPane alignment="CENTER" layoutX="31.0" layoutY="487.0" prefHeight="75.0" prefWidth="539.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="272.0" minWidth="10.0" prefWidth="242.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="272.0" minWidth="10.0" prefWidth="67.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="363.0" minWidth="10.0" prefWidth="236.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="343.0" minHeight="10.0" prefHeight="68.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="59.0" prefWidth="241.0" text="BACK">
               <font>
                  <Font size="32.0" />
               </font>
            </Button>
            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextButtonAction" prefHeight="59.0" prefWidth="241.0" text="NEXT" GridPane.columnIndex="2">
               <font>
                  <Font size="32.0" />
               </font>
            </Button>
         </children>
      </GridPane>
      <TextFlow layoutX="35.0" layoutY="91.0" prefHeight="354.0" prefWidth="530.0" style="-fx-border-color: gray; -fx-padding: 15; -fx-border-radius: 6;" textAlignment="JUSTIFY">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="QUESTION:" />
            <TextArea fx:id="questionTextArea" editable="false" prefHeight="134.0" prefWidth="496.0" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ANSWER:" />
            <TextArea fx:id="answerTextArea" editable="false" prefHeight="134.0" prefWidth="496.0" />
         </children>
      </TextFlow>
      <GridPane alignment="CENTER" layoutX="202.0" layoutY="33.0" prefHeight="40.0" prefWidth="203.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="20.0" minHeight="0.0" prefHeight="16.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="24.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Text fx:id="numberText" fill="#00000070" strokeType="OUTSIDE" strokeWidth="0.0" text="TIP" textAlignment="CENTER" />
               </children>
            </FlowPane>
            <FlowPane alignment="CENTER" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
               <children>
                  <Text fx:id="tipText" strokeType="OUTSIDE" strokeWidth="0.0" text="To Start click on the NEXT Button" textAlignment="CENTER" />
               </children>
            </FlowPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
